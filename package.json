{
  "name": "loto-key-management",
  "version": "1.0.0",
  "description": "LOTO Key Management System - Offline + Supabase Sync",
  "main": "electron/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "logic-test": "node src/tests/testRunner.js run",
    "logic-test:optimize": "node src/tests/testRunner.js run --optimize",
    "test:clear": "node src/tests/testRunner.js clear",
    "test:stress": "node src/tests/testRunner.js run --optimize",
    "test:all": "npm run logic-test:optimize"
  },
  "build": {
    "appId": "com.loto.keymanagement",
    "productName": "LOTO Key Management",
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LOTO Key Management",
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "license": "LICENSE",
      "runAfterFinish": true
    },
    "extraResources": [
      {
        "from": "data/config.json.template",
        "to": "data/config.json"
      }
    ]
  },
  "keywords": [
    "loto",
    "lockout",
    "tagout",
    "safety"
  ],
  "author": "Hatim RG",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.294.0",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.6",
    "wait-on": "^7.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
